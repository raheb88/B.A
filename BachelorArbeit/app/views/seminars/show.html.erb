

<h2 align="center">Title: <%= @seminar.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @user %>
    <ul class="listing">
      <div class="row center">
        <div class=" col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@seminar.user), user_path(@seminar.user) %></li>
          <li class="seminar-title">
            <%= link_to @seminar.user.username, user_path(@seminar.user) %>
          </li>
          <li><small>
            <%= pluralize(@seminar.user.seminars.count, "seminar") if @seminar.user.seminars %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@seminar.description) %>
  <div class="seminar-actions">
    <%= link_to "Edit this article", edit_seminar_path(@seminar), class: "btn-xs btn-primary" %>
    <%= link_to "Delete this seminar", seminar_path(@seminar), method: :delete, data: { confirm: "Are you sure
                 want to delete the seminar?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all seminars", seminars_path, class: "btn btn-xs btn-success" %>
  </div>



    <div class="Sign up">
      <p>
      <!--  <%= link_to "Sign Up for Seminar", new_participant_registration_path,
            class: 'btn-primary btn-g' %>
          -->

          <%= link_to "Sign Up for Seminar", new_participant_path( @seminar ),
                class: 'btn-primary btn-g' %>
              


      </p>
  </div>
  </div>
